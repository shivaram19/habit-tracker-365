{
  "name": "chromalife-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mobile",
    "api"
  ],
  "scripts": {
    "mobile:dev": "cd mobile && npm run dev",
    "mobile:build": "cd mobile && npm run build:web",
    "api:dev": "cd api && npm run dev",
    "api:build": "cd api && npm run build",
    "api:start": "cd api && npm run start",
    "api:migrate": "cd api && npm run migrate",
    "install:all": "npm install && cd mobile && npm install && cd ../api && npm install",
    "dev": "concurrently \"npm run api:dev\" \"npm run mobile:dev\"",
    "typecheck": "cd mobile && npm run typecheck && cd ../api && tsc --noEmit"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
